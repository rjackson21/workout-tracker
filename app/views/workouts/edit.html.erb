<p> You are editing <%= @workout.workout_type %></p>

<%= form_for @workout do |f| %>
  <%= f.label 'Workout Type' %><br>
  <%= f.text_field :workout_type %><br>

  <%= f.label 'Duration' %><br>
  <%= f.text_area :duration %><br>

  <%= f.label 'Date' %><br>
  <%= f.datetime_field :date %><br>

  <%= f.label 'Category' %>
  <%= f.collection_select :category_id, Category.all, :id, :name %>

  <%= f.submit "Update Workout" %>
<% end %>
